<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:fontFamily="serif"
                android:textColor="@color/black"
                android:background="#ff0000"
                android:text="大美江门"
                android:textSize="80sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--轮播图-->
            <ViewFlipper
                android:id="@+id/img_flipper"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:inAnimation="@anim/left_in"
                android:outAnimation="@anim/right_out">

                <ImageView
                    android:id="@+id/img_jm1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jm1" />

                <ImageView
                    android:id="@+id/img_jm2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jm2" />

                <ImageView
                    android:id="@+id/img_jm3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jm3" />

                <ImageView
                    android:id="@+id/img_jm4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jm4" />
            </ViewFlipper>

            <Button
                android:id="@+id/btn1"
                android:textSize="24sp"
                android:text="家乡介绍"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn2"
                android:textSize="24sp"
                android:text="旅游景点一览"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn3"
                android:textSize="24sp"
                android:text="特产美食一览"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>